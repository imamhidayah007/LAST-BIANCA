<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Main2Activity"
    tools:showIn="@layout/activity_main2">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/cv"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="20dp"
        android:padding="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.imam.biancamobile.TextViewImmacBytes
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
               android:id="@+id/tgl"
                android:background="@drawable/gray"
                android:textColor="#98a9b7" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="32dp"
                android:layout_marginTop="20dp">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="top"
                    android:src="@drawable/supportt"
                    android:layout_marginLeft="10dp"
                    app:civ_border_color="#EEEEEE"
                    app:civ_border_width="4dp"
                    app:civ_shadow="true"
                    app:civ_shadow_color="#d0d0d0"
                    app:civ_shadow_radius="2" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/gray"
                    android:orientation="vertical"
                    android:padding="10dp">



                    <com.imam.biancamobile.TextViewImmacBytes
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="05dp"
                        android:id="@+id/welcome"
                        android:textColor="#616e7f" />
                </LinearLayout>


            </LinearLayout>



            <LinearLayout
                android:id="@+id/ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:paddingLeft="62dp"
                android:gravity="right"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:id="@+id/qs"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/green"
                    android:visibility="invisible"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <com.imam.biancamobile.TextViewImmacBytes
                        android:id="@+id/voiceInput"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="05dp"
                        android:textColor="#fff" />
                </LinearLayout>



            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:id="@+id/answer"
                android:paddingRight="32dp"
                android:layout_marginTop="20dp">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="top"
                    android:src="@drawable/supportt"
                    android:layout_marginLeft="10dp"
                    app:civ_border_color="#EEEEEE"
                    app:civ_border_width="4dp"
                    app:civ_shadow="true"
                    app:civ_shadow_color="#d0d0d0"
                    app:civ_shadow_radius="2" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/gray"
                    android:orientation="vertical"
                    android:padding="10dp">



                    <com.imam.biancamobile.TextViewImmacBytes
                        android:layout_width="wrap_content"
                        android:id="@+id/jawaban"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="05dp"
                        android:textColor="#616e7f" />
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </ScrollView>






    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal |bottom"
        android:padding="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:id="@+id/btnSpeakContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#f9f5f6"
            android:gravity="center_horizontal |bottom"
            android:orientation="vertical"
            android:padding="10dp">

        <ImageButton
            android:id="@+id/btnSpeak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/microphone " />

        <com.imam.biancamobile.TextViewImmacBytes
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnSpeak"
            android:layout_margin="10dp"
            android:text="Tap Mic Untuk Memulai" />

    </LinearLayout>
    </android.support.v7.widget.CardView>





</RelativeLayout>